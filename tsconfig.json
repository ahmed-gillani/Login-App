{
    "compilerOptions":  {
                            "allowImportingTsExtensions":  true,
                            "target":  "ESNext",
                            "lib":  [
                                        "DOM",
                                        "DOM.Iterable",
                                        "ESNext"
                                    ],
                            "module":  "ESNext",
                            "moduleResolution":  "Bundler",
                            "jsx":  "react-jsx",
                            "strict":  true,
                            "skipLibCheck":  true,
                            "noEmit":  true,
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "types":  [
                                          "vite/client"
                                      ],
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "src/*"
                                                  ]
                                      }
                        },
    "include":  [
                    "./src"
                ]
}
